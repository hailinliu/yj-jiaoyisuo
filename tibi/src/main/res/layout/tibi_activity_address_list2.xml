<?xml version="1.0" encoding="utf-8" standalone="no"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tibiBgDeep"
    android:orientation="vertical"
    tools:context=".ui.activity.AddressListActivity">

    <include layout="@layout/lib_include_head" />
<com.shizhefei.view.coolrefreshview.CoolRefreshView
    android:id="@+id/coolRefreshView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20pt" />
</com.shizhefei.view.coolrefreshview.CoolRefreshView>
    <View
        android:layout_width="match_parent"
        android:layout_height="0pt"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btSubmit"
        style="@style/tibiButtonStyle.Sure"
        android:layout_width="650pt"
        android:layout_height="90pt"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100pt"
        android:layout_marginBottom="50pt"
        android:text="@string/tibitibi_activity_add_address260" />

</LinearLayout>
