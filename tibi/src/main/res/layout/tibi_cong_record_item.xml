<?xml version="1.0" encoding="utf-8" standalone="no"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120pt"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:paddingTop="10pt"
    android:paddingBottom="10pt"
    android:gravity="center_vertical"
    android:id="@+id/ll_coinlist"
    android:background="@color/lib_bg"
    android:paddingStart="20pt"
    android:paddingEnd="20pt">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_num"
        android:layout_width="0pt"
        android:layout_weight="2"
        android:text="@string/tibi_congnum"
        android:textColor="@color/libTextWhite"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="0pt"
        android:layout_weight="1"
        android:text="@string/tibi_status"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/libTextWhite"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="0pt"
        android:layout_weight="3"
        android:layout_gravity="end"
        android:gravity="end"
        android:text="@string/tibi_time_1"
        android:textColor="@color/libTextWhite"
        android:layout_height="wrap_content"/>
</LinearLayout>

<View
    android:layout_width="match_parent"
    android:layout_marginTop="20pt"
    android:background="@color/libTextWhite"
    android:layout_height="1pt"/>
    </LinearLayout>

