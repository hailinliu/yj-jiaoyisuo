<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:text="@string/tibi_chakan"
        android:textColor="@color/libText_3"
        android:layout_marginTop="20pt"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:text="BTC"
        android:textColor="@color/libTextWhite"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="40pt"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/image"
        android:layout_width="300pt"
        android:layout_marginTop="30pt"
        android:layout_gravity="center"
        android:layout_height="300pt"/>
    <TextView
        android:id="@+id/tv_save"
        android:layout_width="wrap_content"
        android:layout_marginTop="100pt"
        android:text="@string/tibi_save_zhi"
        android:textColor="@color/libTextWhite"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_width="100pt"
        android:src="@mipmap/tibi_icon_tuce"
        android:layout_marginTop="20pt"
        android:layout_gravity="center"
        android:layout_height="100pt"/>
    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:text="@string/tibi_cancel"
        android:textColor="@color/libTextWhite"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="50pt"
        android:layout_marginBottom="20pt"
        android:layout_height="wrap_content"/>
</LinearLayout>
