<?xml version="1.0" encoding="utf-8" standalone="no"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="220pt"
    android:background="@color/tibiBg"
    android:paddingStart="30pt"
    android:paddingEnd="30pt">

    <TextView
        android:id="@+id/tibiTextview4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tibitibi_recy_item_recharge_record20"
        android:textColor="@color/tibiTextContent"
        android:textSize="26pt"
        app:layout_constraintBottom_toTopOf="@+id/tibiTextview3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tibiTextview3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tibitibi_recy_item_recharge_record40"
        android:textColor="@color/tibiTextContent"
        android:textSize="26pt"
        app:layout_constraintBottom_toTopOf="@+id/tibiTextview5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tibiTextview4" />

    <TextView
        android:id="@+id/tibiTextview5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tibitibi_recy_item_recharge_record60"
        android:textColor="@color/tibiTextContent"
        android:textSize="26pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tibiTextview3" />

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@tools:sample/last_names"
        android:textColor="@color/tibiTextHint"
        android:textSize="26pt"
        app:layout_constraintBottom_toBottomOf="@+id/tibiTextview4"
        app:layout_constraintStart_toEndOf="@+id/tibiGuideline"
        app:layout_constraintTop_toTopOf="@+id/tibiTextview4" />

    <TextView
        android:id="@+id/tvNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@tools:sample/last_names"
        android:textColor="@color/tibiTextHint"
        android:textSize="26pt"
        app:layout_constraintBottom_toBottomOf="@+id/tibiTextview3"
        app:layout_constraintStart_toEndOf="@+id/tibiGuideline"
        app:layout_constraintTop_toTopOf="@+id/tibiTextview3" />

    <TextView
        android:id="@+id/tvCreateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@tools:sample/last_names"
        android:textColor="@color/tibiTextHint"
        android:textSize="26pt"
        app:layout_constraintBottom_toBottomOf="@+id/tibiTextview5"
        app:layout_constraintStart_toEndOf="@+id/tibiGuideline"
        app:layout_constraintTop_toTopOf="@+id/tibiTextview5" />


    <android.support.constraint.Guideline
        android:id="@+id/tibiGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3" />

</android.support.constraint.ConstraintLayout>
