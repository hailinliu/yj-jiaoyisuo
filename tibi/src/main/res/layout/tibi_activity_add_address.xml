<?xml version="1.0" encoding="utf-8" standalone="no"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tibiBgDeep"
    android:orientation="vertical"
    tools:context=".ui.activity.AddAddressActivity">


    <include layout="@layout/lib_include_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20pt"
        android:background="@color/lib_bg"
        android:orientation="vertical"
        android:paddingStart="30pt"
        android:paddingEnd="30pt">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60pt"
            android:gravity="center_vertical"
            android:text="@string/tibitibi_activity_add_address60"
            android:textColor="@color/libTextWhite"
            android:textSize="30pt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="104pt"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/etAddress"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/tibiaddAddressActivity2"
                android:textColor="@color/libTextWhite"
                android:textColorHint="@color/tibiTextHint"
                android:textSize="28pt" />

            <ImageView
                android:id="@+id/ivScan"
                android:layout_width="78pt"
                android:layout_height="78pt"
                android:padding="20pt"
                android:src="@mipmap/tibi_icon_scan"
                android:tint="@color/tibiApp" />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60pt"
            android:gravity="center_vertical"
            android:text="@string/tibitibi_activity_add_address150"
            android:textColor="@color/libTextWhite"
            android:textSize="30pt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="104pt"
            android:gravity="center_vertical">


            <EditText
                android:id="@+id/etNotes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/tibitibi_activity_add_address190"
                android:textColor="@color/libTextWhite"
                android:textColorHint="@color/tibiTextHint"
                android:textSize="28pt" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1pt"
            android:background="@color/tibiDivider" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0pt"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btSubmit"
            style="@style/tibiButtonStyle.Sure"
            android:layout_width="650pt"
            android:layout_height="90pt"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100pt"
            android:layout_marginBottom="50pt"
            android:text="@string/tibitibi_activity_add_address260" />
    </LinearLayout>


</LinearLayout>
