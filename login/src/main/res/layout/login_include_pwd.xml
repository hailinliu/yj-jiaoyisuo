<?xml version="1.0" encoding="utf-8" standalone="no"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/login_tongyi"
    android:layout_marginTop="39pt"
    android:background="@drawable/login_shape_stroke4c5_corner6"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    tools:showIn="@layout/login_activity_pwd_forget">

    <ImageView
        android:id="@+id/image_pwd"
        android:layout_width="42pt"
        android:layout_height="44pt"
        android:layout_marginStart="15pt"
        android:visibility="gone"
        android:src="@mipmap/login_pwd"
         />

    <EditText
        android:id="@+id/etPwd"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginStart="30pt"
        android:background="@null"
        android:gravity="center_vertical"
        android:digits="@string/common_filter_number_letter"
        android:hint="@string/loginlogin_include_pwd40"
        android:inputType="textPassword"
        android:textColor="@color/loginTextContent"
        android:textColorHint="@color/loginTextHint"
        android:textSize="30pt" />

    <ImageView
        android:id="@+id/ivPwdToggle"
        android:layout_width="64pt"
        android:layout_height="40pt"
        android:paddingStart="15pt"
        android:paddingTop="6pt"
        android:paddingEnd="15pt"
        android:paddingBottom="6pt"
        android:src="@mipmap/login_icon_hide_white"
        android:tint="@color/loginApp" />

</LinearLayout>
