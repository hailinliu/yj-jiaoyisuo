<?xml version="1.0" encoding="utf-8" standalone="no"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/identBgDeep"
    android:orientation="vertical"
    tools:context=".ui.activity.VerificationResultActivity">

    <include layout="@layout/lib_include_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20pt"
        android:background="@color/identBg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivStatus"
            android:layout_width="250pt"
            android:layout_height="250pt"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="250pt"
            android:src="@mipmap/ident_icon_success" />

        <LinearLayout
            android:id="@+id/llSuccess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50pt"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/identident_activity_verification_result100"
                android:textColor="@color/identTextContent"
                android:textSize="30pt"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llFail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50pt"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvRetry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/identTextContent"
                android:textSize="30pt"
                android:textStyle="bold"
                tools:text="@tools:sample/last_names" />

            <TextView
                android:id="@+id/tvResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20pt"
                android:textColor="@color/identTextHint"
                android:textSize="26pt"
                tools:text="@tools:sample/last_names" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
