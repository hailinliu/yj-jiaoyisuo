<?xml version="1.0" encoding="utf-8" standalone="no"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/identBgDeep"
    android:orientation="vertical"
    tools:context=".ui.activity.VerificationMenuActivity">

    <include layout="@layout/lib_include_head" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="600pt"
        android:layout_marginTop="20pt"
        android:background="@color/identBg"
        android:paddingStart="80pt"
        android:paddingTop="70pt"
        android:paddingEnd="80pt"
        android:paddingBottom="40pt"
        android:src="@mipmap/ident_icon_menu" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20pt"
        android:background="@color/identBg"
        android:orientation="vertical"
        android:paddingStart="30pt"
        android:paddingEnd="30pt">

        <com.allen.library.SuperTextView
            android:id="@+id/stvFirst"
            android:layout_width="match_parent"
            android:layout_height="100pt"
            app:sBackgroundDrawableRes="@color/identBg"
            app:sDividerLineColor="@color/identDivider"
            app:sLeftTextColor="@color/identTextContent"
            app:sLeftTextSize="30pt"
            app:sLeftTextString="@string/identverificationFirstActivity1"
            app:sRightTvDrawableRight="@mipmap/ident_icon_into"
            app:sUseRipple="true" />

        <com.allen.library.SuperTextView
            android:id="@+id/stvSecond"
            app:sBackgroundDrawableRes="@color/identBg"
            app:sDividerLineColor="@color/identDivider"
            android:layout_width="match_parent"
            android:layout_height="100pt"
            app:sLeftTextColor="@color/identTextContent"
            app:sLeftTextSize="30pt"
            app:sLeftTextString="@string/identverificationSecondActivity1"
            app:sRightTvDrawableRight="@mipmap/ident_icon_into"
            app:sUseRipple="true" />
    </LinearLayout>
</LinearLayout>
