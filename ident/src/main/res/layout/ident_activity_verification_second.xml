<?xml version="1.0" encoding="utf-8" standalone="no"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/identBgDeep"
    android:orientation="vertical"
    tools:context=".ui.activity.VerificationSecondActivity">

    <include layout="@layout/lib_include_head" />

    <android.support.v4.widget.NestedScrollView
        android:layout_marginTop="20pt"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/identBgDeep"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/ivCardFront"
                android:layout_width="320pt"
                android:layout_height="200pt"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="90pt"
                android:scaleType="fitXY"
                android:src="@mipmap/ident_icon_front" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22pt"
                android:gravity="center"
                android:text="@string/identident_activity_verification_second100"
                android:textColor="@color/identTextContent"
                android:textSize="28pt" />

            <TextView
                android:layout_width="607pt"
                android:layout_height="wrap_content"
                android:layout_marginTop="20pt"
                android:text="@string/identident_activity_verification_second120"
                android:textColor="@color/identTextHint"
                android:textSize="24pt" />

            <ImageView
                android:id="@+id/ivCardBack"
                android:layout_width="320pt"
                android:layout_height="200pt"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="90pt"
                android:scaleType="fitXY"
                android:src="@mipmap/ident_icon_hold" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22pt"
                android:gravity="center"
                android:text="@string/identident_activity_verification_second160"
                android:textColor="@color/identTextContent"
                android:textSize="28pt" />


            <TextView
                android:layout_width="607pt"
                android:layout_height="wrap_content"
                android:layout_marginTop="20pt"
                android:text="@string/identident_activity_verification_second180"
                android:textColor="@color/identTextHint"
                android:textSize="24pt" />

            <ImageView
                android:id="@+id/ivCardHolder"
                android:layout_width="320pt"
                android:layout_height="200pt"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30pt"
                android:scaleType="fitXY"
                android:visibility="gone"
                android:src="@mipmap/ident_icon_hold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="22pt"
                android:gravity="center"
                android:visibility="gone"
                android:text="@string/identident_activity_verification_second220"
                android:textColor="@color/identTextContent"
                android:textSize="28pt" />

         <!--   <TextView
                android:layout_width="607pt"
                android:layout_height="wrap_content"
                android:layout_marginTop="20pt"
                android:text="@string/identident_activity_verification_second240"
                android:textColor="@color/identTextHint"
                android:textSize="24pt" />-->


            <Button
                android:id="@+id/btSubmit"
                style="@style/identButtonStyle"
                android:layout_width="693pt"
                android:layout_height="93pt"
                android:layout_gravity="center"
                android:layout_marginTop="72pt"
                android:layout_marginBottom="100pt"
                android:text="@string/identident_activity_verification_first240" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
