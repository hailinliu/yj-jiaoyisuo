<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/img_tv_ll"
    android:layout_width="600pt"
    android:layout_height="wrap_content"
    android:background="@drawable/fabi_shape_bg_corner_top"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200pt"
        android:background="@color/fabiApp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/fabiBg"
            android:textSize="36pt"
            tools:text="@tools:sample/last_names" />

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="80pt"
            android:layout_height="80pt"
            android:layout_alignParentEnd="true"
            android:padding="25pt"
            android:src="@mipmap/fabi_icon_dialog_close"
            android:tint="@color/fabiBgDeep" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lib_bg"
        android:orientation="vertical"
        android:padding="30pt">

        <ImageView
            android:id="@+id/ivQRCode"
            android:layout_width="300pt"
            android:layout_height="300pt"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40pt"
            android:adjustViewBounds="true"
            android:maxHeight="1000pt" />

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40pt"
            android:layout_marginBottom="30pt"
            android:gravity="center"
            android:textColor="@color/fabiTextHint"
            android:textSize="32pt"
            tools:text="@tools:sample/last_names" />
    </LinearLayout>


</LinearLayout>
