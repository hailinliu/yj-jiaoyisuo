<?xml version="1.0" encoding="utf-8" standalone="no"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="150pt">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20pt"
            android:paddingStart="30pt"
            android:paddingEnd="30pt">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="80pt"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvBuy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30pt"
                    android:text="@string/fabifabi_fragment_fabi80"
                    android:textColor="@color/libTextWhite"
                    android:textSize="35pt" />

                <TextView
                    android:id="@+id/tvSell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fabifabi_fragment_fabi100"
                    android:textColor="@color/fabiTextHint"
                    android:textSize="35pt" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ivRecord"
                android:layout_width="66pt"
                android:layout_height="66pt"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15pt"
                android:layout_toStartOf="@+id/ivFilter"
                android:padding="15pt"
                android:src="@mipmap/fabi_icon_record" />

            <ImageView
                android:id="@+id/ivFilter"
                android:layout_width="66pt"
                android:layout_height="66pt"
                android:layout_toStartOf="@+id/iv_shuaxin"
                android:layout_centerVertical="true"
                android:padding="15pt"
                android:src="@mipmap/fabi_icon_filter" />
            <ImageView
                android:id="@+id/iv_shuaxin"
                android:layout_width="66pt"
                android:layout_height="66pt"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="15pt"
                android:visibility="invisible"
                android:src="@mipmap/fabi_shuaxin" />
        </RelativeLayout>

        <com.sskj.lib.util.ViewPagerBoolean
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <Button
        android:id="@+id/btPublish"
        android:layout_width="100pt"
        android:layout_height="100pt"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50pt"
        android:layout_marginBottom="50pt"
        android:background="@drawable/fabi_shape_app_oval"
        android:gravity="center"
        android:visibility="gone"
        android:paddingStart="8pt"
        android:paddingEnd="8pt"
        android:text="@string/fabifabi_fragment_fabi210"
        android:textColor="@color/fabiBg"
        android:textSize="28pt"
        android:textStyle="bold" />
</RelativeLayout>
