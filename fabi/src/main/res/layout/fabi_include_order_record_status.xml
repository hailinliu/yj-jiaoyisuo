<?xml version="1.0" encoding="utf-8" standalone="no"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fabiApp"
    android:orientation="vertical"
    android:padding="30pt"
    tools:showIn="@layout/fabi_activity_order_record_detail">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30pt"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="50pt"
            android:layout_height="50pt"
            android:layout_marginEnd="20pt"
            android:background="@mipmap/fabi_icon_tip"
            android:backgroundTint="@color/fabiBg"
            android:rotation="180" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fabifabiOrderStatusEnum1"
            android:textColor="@color/lib_bg"
            android:textSize="50pt" />

        <View
            android:layout_width="0pt"
            android:layout_height="0pt"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/llPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50pt"
                android:layout_height="50pt"
                android:layout_marginEnd="20pt"
                android:src="@mipmap/fabi_icon_phone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fabifabi_dialog_phone40"
                android:textColor="@color/lib_bg"
                android:textSize="32pt" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35pt"
        android:lineSpacingMultiplier="1.2"
        android:text="@string/fabifabi_include_order_record_status180"
        android:textColor="@color/lib_bg"
        android:textSize="26pt" />
</LinearLayout>
