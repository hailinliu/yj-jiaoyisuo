<?xml version="1.0" encoding="utf-8" standalone="no"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bibiBg"
    android:orientation="vertical"
    android:paddingStart="30pt"
    android:paddingTop="20pt"
    android:paddingEnd="30pt"
    android:paddingBottom="20pt"
    tools:context=".ui.fragment.PankouFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60pt">

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10pt"
            android:textColor="@color/bibiTextContent"
            android:textSize="32pt"
            tools:text="3643.123" />

        <TextView
            android:id="@+id/tvRMBPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/bibiTextHint"
            android:textSize="24pt"
            tools:text="~1231.12USDT" />

        <TextView
            android:id="@+id/tvRate"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/bibiGreen"
            android:textSize="28pt"
            tools:text="-3.5%" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50pt"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvBuyTitle"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:text="买价(USDT)"
            android:textColor="@color/bibiTextHint"
            android:textSize="24pt" />

        <TextView
            android:id="@+id/tvNumTitle"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="数量(EOS)"
            android:textColor="@color/bibiTextHint"
            android:textSize="24pt" />

        <TextView
            android:id="@+id/tvSellTitle"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="卖价(USDT)"
            android:textColor="@color/bibiTextHint"
            android:textSize="24pt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/buyRecyclerView"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <View
            android:layout_width="1pt"
            android:layout_height="250pt"
            android:background="@color/bibiTextHint" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/sellRecyclerView"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>
