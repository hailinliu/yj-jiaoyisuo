<?xml version="1.0" encoding="utf-8" standalone="no"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/lib_bg"
    android:orientation="vertical"
    android:padding="28pt">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50pt"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/entrust_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"
            android:text="---"
            android:textSize="28pt" />

        <TextView
            android:id="@+id/entrust_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/entrust_type"
            android:gravity="center_vertical"
            android:text="-----"
            android:visibility="gone"
            android:textColor="@color/libTextWhite"
            android:textSize="28pt" />


        <TextView
            android:id="@+id/entrust_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="16pt"
            android:layout_toRightOf="@+id/entrust_name"
            android:gravity="start|center_vertical"
            android:text="---"
            android:textColor="@color/bibiTextHint"
            android:textSize="20pt" />

        <TextView
            android:id="@+id/entrust_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:paddingStart="10pt"
            android:paddingEnd="10pt"
            android:text="撤销"
            android:textColor="@color/bibiHistorytext"
            android:textSize="22pt"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15pt"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/entrust_prePrice_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:text="委托价(USDT)"
            android:textColor="@color/bibiTextHint"
            android:textSize="26pt" />

        <TextView
            android:id="@+id/entrust_preNum_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="委托量(USDT)"
            android:textColor="@color/bibiTextHint"

            android:textSize="26pt" />

        <TextView
            android:id="@+id/entrust_realNum_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end|center_vertical"
            android:text="委托总量(USDT)"
            android:textColor="@color/bibiTextHint"

            android:textSize="26pt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">


        <TextView
            android:id="@+id/entrust_prePrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="---"
            android:textColor="@color/libTextWhite"
            android:textSize="30pt" />

        <TextView
            android:id="@+id/entrust_preNum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="---"
            android:textColor="@color/libTextWhite"
            android:textSize="30pt" />

        <TextView
            android:id="@+id/entrust_realNum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end|center_vertical"
            android:text="---"
            android:textColor="@color/libTextWhite"
            android:textSize="30pt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8pt"
        android:visibility="gone">


        <TextView
            android:id="@+id/entrust_time_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:text="时间"
            android:textColor="@color/bibiTextHint"
            android:textSize="26pt" />

        <TextView
            android:id="@+id/entrust_totalPrice_text"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:text="成交总额"
            android:textColor="@color/bibiTextHint"
            android:textSize="26pt" />

        <TextView
            android:id="@+id/entrust_realPrice_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="成交均价(USDT)"
            android:textColor="@color/bibiTextHint"
            android:textSize="26pt" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="10dp"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:text="---"
            android:textColor="@color/libTextWhite"
            android:textSize="30pt" />

        <TextView
            android:id="@+id/entrust_totalPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:text="---"
            android:textColor="@color/libTextWhite"
            android:textSize="30pt" />

        <TextView
            android:id="@+id/entrust_realPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="---"
            android:textColor="@color/libTextWhite"
            android:textSize="30pt" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20pt"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTitlePrice"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/bibiTextHint"
            android:textSize="26pt"
            tools:text="08-12 14:24" />

        <TextView
            android:id="@+id/tvTitleNum"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/bibiTextHint"
            android:textSize="26pt"
            tools:text="08-12 14:24" />

        <TextView
            android:id="@+id/tvTitleDealNum"
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/bibiTextHint"
            android:textSize="26pt"
            tools:text="撤单" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20pt"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/libTextWhite"
            android:textSize="30pt"
            tools:text="08-12 14:24" />

        <TextView
            android:id="@+id/tvNum"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/libTextWhite"
            android:textSize="30pt"
            tools:text="08-12 14:24" />

        <TextView
            android:id="@+id/tvDealNum"
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/libTextWhite"
            android:textSize="30pt"
            tools:text="撤单" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2pt"
        android:layout_marginTop="15pt"
        android:background="@color/bibiDivider" />
</LinearLayout>
