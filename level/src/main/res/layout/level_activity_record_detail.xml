<?xml version="1.0" encoding="utf-8" standalone="no"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bibiBgDeep"
    android:orientation="vertical"
    tools:context=".ui.activity.RecordDetailActivity">

    <include layout="@layout/lib_include_head" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50pt"
        android:paddingStart="20pt"
        android:paddingEnd="20pt"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/entrust_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"
            android:text="---"
            android:textSize="28pt" />

        <TextView
            android:id="@+id/entrust_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/entrust_type"
            android:gravity="center_vertical"
            android:text="-----"
            android:visibility="gone"
            android:textColor="@color/bibiTextContent"
            android:textSize="28pt" />


        <TextView
            android:id="@+id/entrust_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="16pt"
            android:layout_toRightOf="@+id/entrust_name"
            android:gravity="start|center_vertical"
            android:text="---"
            android:textColor="@color/bibiTextHint"
            android:textSize="20pt" />

        <TextView
            android:id="@+id/entrust_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:paddingStart="10pt"
            android:paddingEnd="10pt"
            android:text="@string/level_cancel"
            android:textColor="@color/bibiHistorytext"
            android:textSize="22pt"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15pt"
        android:paddingStart="20pt"
        android:paddingEnd="20pt"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/entrust_prePrice_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:text="@string/levelUsdt"
            android:textColor="@color/bibiTextHint"
            android:textSize="26pt" />

        <TextView
            android:id="@+id/entrust_preNum_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/level_unit"
            android:textColor="@color/bibiTextHint"

            android:textSize="26pt" />

        <TextView
            android:id="@+id/entrust_realNum_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end|center_vertical"
            android:text="@string/level_zong"
            android:textColor="@color/bibiTextHint"

            android:textSize="26pt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="20pt"
        android:paddingEnd="20pt"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">


        <TextView
            android:id="@+id/entrust_prePrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="---"
            android:textColor="@color/bibiTextContent"
            android:textSize="30pt" />

        <TextView
            android:id="@+id/entrust_preNum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="---"
            android:textColor="@color/bibiTextContent"
            android:textSize="30pt" />

        <TextView
            android:id="@+id/entrust_realNum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end|center_vertical"
            android:text="---"
            android:textColor="@color/bibiTextContent"
            android:textSize="30pt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="20pt"
        android:paddingEnd="20pt"
        android:paddingTop="8pt"
        android:visibility="gone">


        <TextView
            android:id="@+id/entrust_time_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:text="@string/level_time"
            android:textColor="@color/bibiTextHint"
            android:textSize="26pt" />

        <TextView
            android:id="@+id/entrust_totalPrice_text"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:text="@string/level_jiaoyi_zonge"
            android:textColor="@color/bibiTextHint"
            android:textSize="26pt" />

        <TextView
            android:id="@+id/entrust_realPrice_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/level_junjia"
            android:textColor="@color/bibiTextHint"
            android:textSize="26pt" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="20pt"
        android:paddingEnd="20pt"
        android:paddingTop="4dp"
        android:paddingBottom="10dp"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:text="---"
            android:textColor="@color/bibiTextContent"
            android:textSize="30pt" />

        <TextView
            android:id="@+id/entrust_totalPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:text="---"
            android:textColor="@color/bibiTextContent"
            android:textSize="30pt" />

        <TextView
            android:id="@+id/entrust_realPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="---"
            android:textColor="@color/bibiTextContent"
            android:textSize="30pt" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20pt"
        android:paddingEnd="20pt"
        android:layout_marginTop="20pt"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTitlePrice"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/libTextGray"
            android:textSize="26pt"
            tools:text="08-12 14:24" />

        <TextView
            android:id="@+id/tvTitleNum"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/libTextGray"
            android:textSize="26pt"
            tools:text="08-12 14:24" />

        <TextView
            android:id="@+id/tvTitleDealNum"
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/libTextGray"
            android:textSize="26pt"
            tools:text="@string/level_cedan" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20pt"
        android:paddingStart="20pt"
        android:paddingEnd="20pt"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/bibiTextContent"
            android:textSize="30pt"
            tools:text="08-12 14:24" />

        <TextView
            android:id="@+id/tvNum"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/bibiTextContent"
            android:textSize="30pt"
            tools:text="08-12 14:24" />

        <TextView
            android:id="@+id/tvDealNum"
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/bibiTextContent"
            android:textSize="30pt"
            tools:text="@string/level_cedan" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2pt"
        android:layout_marginTop="15pt"
        android:background="@color/bibiDivider" />
    <LinearLayout
        android:id="@+id/ll_shengyu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20pt"
        android:background="@color/bibiBg"
        android:orientation="vertical"
        android:padding="30pt">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bibi_bibi_activity_record_detail460"
                android:textColor="@color/bibiTextHint"
                android:textSize="28pt" />

            <TextView
                android:id="@+id/tvTimeDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="@color/bibiTextContent"
                android:textSize="28pt"
                tools:text="05-01 02:00" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15pt"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bibi_bibi_activity_record_detail530"
                android:textColor="@color/bibiTextHint"
                android:textSize="28pt" />

            <TextView
                android:id="@+id/tvPriceDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="@color/bibiTextContent"
                android:textSize="28pt"
                tools:text="05-01 02:00" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15pt"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bibi_bibi_activity_record_detail600"
                android:textColor="@color/bibiTextHint"
                android:textSize="28pt" />

            <TextView
                android:id="@+id/tvNumDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="@color/bibiTextContent"
                android:textSize="28pt"
                tools:text="05-01 02:00" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15pt"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bibi_bibi_activity_record_detail670"
                android:textColor="@color/bibiTextHint"
                android:textSize="28pt" />

            <TextView
                android:id="@+id/tvFeeDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="@color/bibiTextContent"
                android:textSize="28pt"
                tools:text="05-01 02:00" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
