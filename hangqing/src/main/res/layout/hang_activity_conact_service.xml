<?xml version="1.0" encoding="utf-8" standalone="no"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/libBgDeep"
    android:paddingStart="30pt"
    android:paddingEnd="30pt"
    android:orientation="vertical"
    android:layout_marginTop="290pt"
    tools:ignore="MissingDefaultResource">
   <include layout="@layout/lib_include_head" />
    <LinearLayout
        android:id="@+id/ll_select"
        android:layout_width="match_parent"
        android:layout_marginTop="80pt"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="@string/hang_question_type"
            android:textSize="26pt"
            android:textStyle="bold"
            android:textColor="#666666"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_leixing"
            android:layout_width="wrap_content"
            android:textColor="@color/libTextWhite"
            android:text="BUG"
            android:layout_marginEnd="20pt"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/image"
            android:layout_width="30pt"
            android:src="@mipmap/hang_select"
            android:tint="#666666"
            android:layout_height="30pt"/>
    </LinearLayout>
<View
    android:layout_width="wrap_content"
    android:layout_marginTop="30pt"
    android:background="@color/libTextGray"
    android:layout_height="1pt"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="5pt"
        android:layout_marginEnd="5pt"
        android:padding="20pt"
        android:background="@drawable/hang_shape_5e8_stoke"
        android:layout_height="300pt">
        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:hint="@string/hang_500"
            android:background="@null"
            android:gravity="top"
            android:textColor="@color/libTextWhite"
            android:textColorHint="@color/libTextGray"
            android:layout_height="180pt"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <View
            android:layout_width="0pt"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="0/500"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20pt"
        android:layout_height="200pt">
        <ImageView
            android:id="@+id/image1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/libTextGray"
            android:layout_marginEnd="60pt"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/image2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/libTextGray"
            android:layout_marginStart="60pt"
            android:layout_marginEnd="60pt"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/image3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/libTextGray"
            android:layout_marginStart="60pt"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="40pt"
        android:text="@string/hang_3_jpg_png_jpeg_2m"
        android:textColor="@color/libTextWhite"
        android:layout_height="wrap_content"/>
   <Button
       android:id="@+id/bt_submit"
       android:layout_width="match_parent"
       android:text="@string/hang_submit"
       android:textColor="@color/lib_white"
       android:gravity="center"
       android:paddingTop="20pt"
       android:paddingBottom="20pt"
       android:layout_marginTop="60pt"
       android:background="@drawable/hang_button"
       android:layout_marginStart="40pt"
       android:layout_marginEnd="40pt"
       android:layout_height="wrap_content"/>
</LinearLayout>
