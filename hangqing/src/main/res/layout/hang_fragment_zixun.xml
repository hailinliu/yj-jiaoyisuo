<?xml version="1.0" encoding="utf-8" standalone="no"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hangBgDeep"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="45pt"
    tools:context=".ui.fragment.ZixunFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100pt"
        android:background="@color/lib_bg"
        android:gravity="center">

        <com.flyco.tablayout.SegmentTabLayout
            android:id="@+id/slidingTabLayout"
            android:layout_width="320pt"
            android:layout_height="58pt"
            app:tl_indicator_anim_enable="true"
            app:tl_indicator_bounce_enable="false"
            app:tl_indicator_color="@color/hangSelect"
            app:tl_textSelectColor="@color/hangBg"
            app:tl_textUnselectColor="@color/hangSelect" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20pt" />
</LinearLayout>
