<?xml version="1.0" encoding="utf-8" standalone="no"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingStart="20pt"
    android:background="@color/lib_bg"
    android:paddingEnd="20pt"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20pt"
        android:orientation="horizontal">
    <ImageView
        android:layout_marginStart="20pt"
        android:layout_width="20pt"
        android:layout_gravity="center"
        android:src="@mipmap/hang_solo1"
        android:layout_height="20pt"/>
    <EditText
        android:id="@+id/et_solo"
        android:background="@null"
        android:hint="@string/hang_solo"
        android:paddingStart="30pt"
        android:textColorHint="@color/libTextGray"
        android:layout_width="0pt"
        android:layout_weight="1"
        android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/cancel"
            android:text="@string/hang_cancel"
            android:textColor="@color/libTextWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
<android.support.v7.widget.RecyclerView
    android:id="@+id/rv"
    android:layout_marginTop="20pt"
    android:layout_width="match_parent"
    android:layout_height="0pt"
    android:layout_weight="1"/>
</LinearLayout>
