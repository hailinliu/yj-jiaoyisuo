<?xml version="1.0" encoding="utf-8" standalone="no"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="20pt"
    android:paddingEnd="20pt"
    android:paddingBottom="20pt"
    android:paddingTop="20pt"
    android:layout_marginTop="20pt"
    android:layout_marginBottom="20pt"
    android:background="@drawable/hang_shape_5e8_stoke"
    android:orientation="vertical"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_marginTop="20pt"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:text="343434"
        android:ellipsize="end"
        android:singleLine="true"
        android:maxWidth="400pt"
        android:textColor="@color/libTextWhite"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="0pt"
        android:layout_weight="1"
        android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/tv_chakan"
        android:layout_width="120pt"
        android:text="@string/hang_dianji_chakan"
        android:textColor="@color/libGreen1"
        android:layout_height="wrap_content"/>
</LinearLayout>
   <TextView
       android:id="@+id/tv_content"
       android:layout_marginTop="30pt"
       android:layout_width="wrap_content"
       android:text="grer"
       android:visibility="invisible"
       android:textColor="@color/libTextGray"
       android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:textColor="@color/libTextGray"
        android:layout_marginTop="30pt"
        android:text="2020-23"
        android:layout_height="wrap_content"/>
</LinearLayout>
