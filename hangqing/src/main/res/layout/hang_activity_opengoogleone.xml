<?xml version="1.0" encoding="utf-8" standalone="no"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/libBgDeep"
    android:paddingStart="30pt"
    android:paddingEnd="30pt"
    android:orientation="vertical"
    android:layout_marginTop="290pt"
    tools:ignore="MissingDefaultResource">
   <include layout="@layout/lib_include_head" />
<TextView
    android:id="@+id/tv_title"
    android:layout_width="wrap_content"
    android:text="@string/hang_google_yanzheng"
    android:textColor="@color/libTextWhite"
    android:textSize="50pt"
    android:textStyle="bold"
    android:layout_marginTop="50pt"
    android:layout_marginStart="10pt"
    android:layout_height="wrap_content"/>
   <LinearLayout
       android:layout_width="match_parent"
       android:orientation="horizontal"
       android:layout_marginStart="10pt"
       android:layout_marginTop="20pt"
       android:layout_height="wrap_content">
      <TextView
          android:id="@+id/tv_buzou"
          android:layout_width="wrap_content"
          android:text="@string/hang_buzou1"
          android:textColor="@color/libTextWhite"
          android:textSize="30pt"
          android:layout_height="wrap_content"/>
      <TextView
          android:id="@+id/tv_xuanze"
          android:layout_width="wrap_content"
          android:text="@string/hangApp"
          android:textColor="@color/libTextWhite"
          android:textSize="30pt"
          android:layout_marginStart="30pt"
          android:layout_height="wrap_content"/>
   </LinearLayout>
  <LinearLayout
      android:id="@+id/ll_app"
      android:layout_width="match_parent"
      android:layout_marginStart="10pt"
      android:layout_marginEnd="10pt"
      android:paddingTop="30pt"
      android:paddingBottom="30pt"
      android:gravity="center"
      android:background="@drawable/hang_shape_5e8_stoke"
      android:layout_gravity="center"
      android:layout_marginTop="50pt"
      android:orientation="horizontal"
      android:layout_height="wrap_content">
      <ImageView
          android:layout_width="60pt"
          android:src="@mipmap/hang_apple"
          android:layout_gravity="center"
          android:layout_height="60pt"/>
     <TextView
         android:layout_width="wrap_content"
         android:text="Download from\n App Store"
         android:textSize="32pt"
         android:gravity="center"
         android:layout_gravity="center"
         android:layout_marginStart="60pt"
         android:textColor="@color/libTextWhite"
         android:layout_height="wrap_content"/>

  </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_android"
        android:layout_width="match_parent"
        android:layout_marginStart="10pt"
        android:layout_marginEnd="10pt"
        android:paddingTop="30pt"
        android:paddingBottom="30pt"
        android:gravity="center"
        android:background="@drawable/hang_shape_5e8_stoke"
        android:layout_gravity="center"
        android:layout_marginTop="20pt"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="60pt"
            android:src="@mipmap/hang_guge"
            android:layout_marginStart="25pt"
            android:layout_gravity="center"
            android:layout_height="60pt"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="Download from\n Google Play"
            android:textSize="32pt"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginStart="60pt"
            android:textColor="@color/libTextWhite"
            android:layout_height="wrap_content"/>

    </LinearLayout>
   <Button
       android:id="@+id/logout_btn"
       style="@style/libButtonStyle"
       android:layout_marginLeft="50pt"
       android:layout_marginTop="100pt"
       android:layout_marginRight="50pt"
       android:text="@string/hang_next_aready" />
</LinearLayout>
