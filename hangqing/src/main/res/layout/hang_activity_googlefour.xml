<?xml version="1.0" encoding="utf-8" standalone="no"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/libBgDeep"
    android:paddingStart="30pt"
    android:paddingEnd="30pt"
    android:orientation="vertical"
    android:layout_marginTop="290pt"
    tools:ignore="MissingDefaultResource">
   <include layout="@layout/lib_include_head" />
<TextView
    android:id="@+id/tv_title"
    android:layout_width="wrap_content"
    android:text="@string/hang_google_yanzheng"
    android:textColor="@color/libTextWhite"
    android:textSize="40pt"
    android:textStyle="bold"
    android:layout_marginTop="50pt"
    android:layout_marginStart="10pt"
    android:layout_height="wrap_content"/>
   <LinearLayout
       android:layout_width="match_parent"
       android:orientation="horizontal"
       android:layout_marginStart="10pt"
       android:layout_marginTop="20pt"
       android:layout_height="wrap_content">
      <TextView
          android:id="@+id/tv_buzou"
          android:layout_width="wrap_content"
          android:text="@string/hang_buzou"
          android:textColor="@color/libTextWhite"
          android:textSize="32pt"
          android:layout_height="wrap_content"/>
      <TextView
          android:id="@+id/tv_xuanze"
          android:layout_width="wrap_content"
          android:text="@string/hang_qiyong_google"
          android:textColor="@color/libTextGray"
          android:textSize="32pt"
          android:layout_marginStart="30pt"
          android:layout_height="wrap_content"/>
   </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_marginStart="10pt"
    android:layout_marginTop="50pt"
    android:layout_marginEnd="10pt"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="@string/hang_login_pwd"
        android:textColorHint="@color/libTextGray" />
    <ImageView
        android:layout_width="30pt"
        android:src="@mipmap/login_biyan"
        android:layout_height="30pt"/>
</LinearLayout>

   <View
       android:layout_width="match_parent"
       android:layout_marginTop="15pt"
       android:layout_marginStart="10pt"
       android:layout_marginEnd="10pt"
       android:background="@color/libTextGray"
       android:layout_height="1pt"/>
    <EditText
        android:id="@+id/et_zhengjianhao"
        android:layout_marginStart="10pt"
        android:layout_marginEnd="10pt"
        android:layout_marginTop="50pt"
        android:hint="@string/hang_google"
        android:textColorHint="@color/libTextGray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="50pt"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_1"
            android:layout_width="0pt"
            android:layout_weight="1"
            android:layout_marginStart="10pt"
            android:layout_marginEnd="50pt"
            android:layout_height="match_parent"/>
        <EditText
            android:id="@+id/et_2"
            android:layout_width="0pt"
            android:layout_weight="1"
            android:layout_marginStart="10pt"
            android:layout_marginEnd="50pt"
            android:layout_height="match_parent"/>
        <EditText
            android:id="@+id/et_3"
            android:layout_width="0pt"
            android:layout_weight="1"
            android:layout_marginStart="10pt"
            android:layout_marginEnd="50pt"
            android:layout_height="match_parent"/>
        <EditText
            android:id="@+id/et_4"
            android:layout_width="0pt"
            android:layout_weight="1"
            android:layout_marginStart="10pt"
            android:layout_marginEnd="50pt"
            android:layout_height="match_parent"/>
        <EditText
            android:id="@+id/et_5"
            android:layout_width="0pt"
            android:layout_weight="1"
            android:layout_marginStart="10pt"
            android:layout_marginEnd="50pt"
            android:layout_height="match_parent"/>
        <EditText
            android:id="@+id/et_6"
            android:layout_width="0pt"
            android:layout_weight="1"
            android:layout_marginStart="10pt"
            android:layout_marginEnd="50pt"
            android:layout_height="match_parent"/>
    </LinearLayout>
   
   <Button
       android:id="@+id/logout_btn"
       style="@style/libButtonStyle"
       android:layout_marginLeft="50pt"
       android:layout_marginTop="100pt"
       android:layout_marginRight="50pt"
       android:text="@string/hang_next" />
</LinearLayout>
