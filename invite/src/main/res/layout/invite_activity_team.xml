<?xml version="1.0" encoding="utf-8" standalone="no"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.activity.TeamActivity"
    android:background="@color/inviteBgDeep"
    android:orientation="vertical">

    <include layout="@layout/lib_include_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/inviteBg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/libBg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="32pt">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="UID"
                android:textColor="@color/inviteTextHint"
                android:textSize="26pt" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:textColor="@color/inviteTextHint"
                android:textSize="26pt" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="right"
                android:textColor="@color/inviteTextHint"
                android:textSize="26pt" />

        </LinearLayout>

        <com.shizhefei.view.coolrefreshview.CoolRefreshView
            android:id="@+id/coolRefreshView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </com.shizhefei.view.coolrefreshview.CoolRefreshView>

    </LinearLayout>

</LinearLayout>
