<?xml version="1.0" encoding="utf-8" standalone="no"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/lib_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100pt"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30pt"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivEmpty"
                android:layout_width="213pt"
                android:layout_height="200pt"
                android:src="@mipmap/lib_mvc_no_data" />

            <TextView
                android:id="@+id/tvContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35pt"
                android:gravity="center"
                android:text="@string/liblib_mvc_empty_view80"
                android:textColor="@color/libTextHint"
                android:textSize="30pt" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</FrameLayout>
