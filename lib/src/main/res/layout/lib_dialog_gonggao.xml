<?xml version="1.0" encoding="utf-8" standalone="no"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#00ffffff"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="@dimen/lib_gonggao_width"
        android:layout_marginStart="@dimen/lib_gonggao_maginstartandend"
        android:layout_marginEnd="@dimen/lib_gonggao_maginstartandend"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <org.raphets.roundimageview.RoundImageView
                android:id="@+id/simleview"
                android:layout_width="@dimen/lib_gonggao_width"
                android:layout_height="200dp"
                android:layout_marginStart="@dimen/lib_gonggao_magrinstart"
                app:leftBottom_corner_radius="0dp"
                android:adjustViewBounds="true"
                app:leftTop_corner_radius="@dimen/lib_gonggao_redius"
                app:rightBottom_corner_radius="0dp"
                app:rightTop_corner_radius="@dimen/lib_gonggaoright_redius"
                android:background="@drawable/lib_shape_circle_zuixin"
                app:type="round"
                android:src="@mipmap/lib_bg_notice"
               />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80pt"
                android:layout_marginTop="60pt"
                android:text="@string/lib_zui_new_gong_gao"
                android:textColor="@color/libBg1"
                android:textSize="36pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80pt"
                android:layout_marginTop="120pt"
                android:text="Latest Announcement"
                android:textColor="@color/libBg1"
                android:textSize="28pt" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/libBg2"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginStart="@dimen/lib_gonggao_magrinstart"
            android:paddingBottom="60dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45pt"
                android:text="@string/lib_gong_gao_detail"
                android:textColor="@color/libTextTitle"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/libTextHint"
                android:textSize="14sp"
                tools:text="---" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="54pt"
        android:layout_height="54pt"
        android:layout_marginTop="30pt"
        android:src="@mipmap/lib_close"
        android:tint="@color/libBg1" />
</LinearLayout>
