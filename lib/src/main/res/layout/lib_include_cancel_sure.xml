<?xml version="1.0" encoding="utf-8" standalone="no"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80pt"
    android:background="@color/lib_bg"
    android:layout_marginTop="30pt"
    android:gravity="center"
    android:orientation="horizontal">

    <Button
        android:id="@+id/btCancel"
        style="@style/libButtonStyle.Cancel"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="50pt"
        android:layout_weight="1"
        android:text="@string/liblib_bottom_sheet_selector80" />

    <Button
        android:id="@+id/btSure"
        style="@style/libButtonStyle.Sure"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/libappCircleCheckUtil5" />
</LinearLayout>
