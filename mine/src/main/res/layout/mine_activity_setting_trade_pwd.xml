<?xml version="1.0" encoding="utf-8" standalone="no"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mineBgDeep"
    android:orientation="vertical"
    tools:context=".ui.activity.SettingFundPwdActivity">

    <include layout="@layout/lib_include_head" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20pt"
        android:background="@color/mineBg"
        android:orientation="vertical"
        android:paddingStart="30pt"
        android:paddingEnd="30pt">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30pt"
            android:text="@string/minemine_activity_security200"
            android:visibility="gone"
            android:textColor="@color/mineTextContent"
            android:textSize="32pt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etPwd"
                android:layout_width="0pt"
                android:layout_height="110pt"
                android:layout_weight="1"
                android:background="@null"
                android:digits="@string/common_filter_number_letter"
                android:hint="@string/minemine_activity_setting_password190"
                android:inputType="textPassword"
                android:textColor="@color/mineTextContent"
                android:textColorHint="@color/mineTextHint"
                android:textSize="30pt" />

            <ImageView
                android:id="@+id/ivPwdToggle"
                android:layout_width="64pt"
                android:layout_height="40pt"
                android:layout_gravity="center_vertical"
                android:paddingStart="15pt"
                android:paddingTop="6pt"
                android:paddingEnd="15pt"
                android:paddingBottom="6pt"
                android:src="@mipmap/mine_icon_hide_white"
                android:tint="@color/mineTextTitle" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1pt"
            android:background="@color/mineDivider" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30pt"
            android:text="@string/minemine_setting_fund_pwd150"
            android:visibility="gone"
            android:textColor="@color/mineTextContent"
            android:textSize="32pt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etPwdAgain"
                android:layout_width="0pt"
                android:layout_height="110pt"
                android:layout_weight="1"
                android:background="@null"
                android:digits="@string/common_filter_number_letter"
                android:hint="@string/minemine_setting_fund_pwd150"
                android:inputType="textPassword"
                android:textColor="@color/mineTextContent"
                android:textColorHint="@color/mineTextHint"
                android:textSize="30pt" />

            <ImageView
                android:id="@+id/ivNextPwdToggle"
                android:layout_width="64pt"
                android:layout_height="40pt"
                android:layout_gravity="center_vertical"
                android:paddingStart="15pt"
                android:paddingTop="6pt"
                android:paddingEnd="15pt"
                android:paddingBottom="6pt"
                android:src="@mipmap/mine_icon_hide_white"
                android:tint="@color/mineTextTitle" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1pt"
            android:background="@color/mineDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110pt"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/minemine_setting_fund_pwd260"
                android:textColor="@color/mineTextContent"
                android:textSize="32pt" />

            <TextView
                android:id="@+id/tvAccount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/mineTextContent"
                android:textSize="32pt"
                tools:text="15093060100" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1pt"
            android:background="@color/mineDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110pt"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etCode"
                android:layout_width="0pt"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/minemine_activity_bind_mobile210"
                android:inputType="number"
                android:textColor="@color/mineTextContent"
                android:textColorHint="@color/mineTextHint"
                android:textSize="30pt" />

            <Button
                android:id="@+id/btGetCode"
                style="@style/mineButtonStyle.CheckCode"
                android:layout_width="wrap_content"
                android:layout_height="71pt"
                android:gravity="center"
                android:paddingStart="30pt"
                android:paddingEnd="30pt"
                android:textSize="28pt" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1pt"
            android:background="@color/mineDivider" />

        <Button
            android:id="@+id/btSubmit"
            style="@style/mineButtonStyle"
            android:layout_width="650pt"
            android:layout_height="90pt"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80pt"
            android:text="@string/minemine_activity_bind_mobile330" />
    </LinearLayout>

</LinearLayout>
